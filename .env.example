# MongoDB Atlas connection string (REQUIRED)
# Get this from your MongoDB Atlas dashboard
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/?retryWrites=true&w=majority&appName=your-app
MONGODB_DB=app

# Tailscale Auth Key (OPTIONAL - leave blank if not using Tailscale)
# Generate an ephemeral key at: https://login.tailscale.com/admin/settings/keys
TS_AUTHKEY=

# Vultr Object Storage (S3-compatible) - OPTIONAL
# Get these from Vultr Object Storage dashboard: https://my.vultr.com/objectstorage/
# Endpoint format: https://REGION.vultrobjects.com (e.g., https://ewr1.vultrobjects.com)
VULTR_ENDPOINT=https://ewr1.vultrobjects.com
VULTR_ACCESS_KEY=your-vultr-access-key
VULTR_SECRET_KEY=your-vultr-secret-key
VULTR_BUCKET=your-bucket-name

# Internal API Key (REQUIRED for video service)
# Shared secret between backend and video service for authenticated uploads
# Generate a secure random string: openssl rand -hex 32
INTERNAL_API_KEY=your-internal-api-key

# Video Service Configuration (OPTIONAL - defaults shown)
# Presigned URL expiry in seconds (default: 3600 = 1 hour)
PRESIGNED_URL_EXPIRY=3600
# Maximum file size in bytes (default: 524288000 = 500MB)
MAX_FILE_SIZE=524288000

# Gemini API Key (REQUIRED for embeddings)
# Get from: https://aistudio.google.com/app/apikey
GEMINI_API_KEY=your-gemini-api-key

# Public base URL for video service
PUBLIC_BASE_URL=http://localhost:8002
S3_ADDRESSING_STYLE=path
PRESIGN_EXORES_SECONDS=3600

# OpenRouter Configuration (REQUIRED for video script generation)
# Get from: https://openrouter.ai/keys
OPENROUTER_API_KEY=your-openrouter-api-key
OPENROUTER_MODEL=google/gemini-2.5-flash-lite-preview-09-2025

# DigitalOcean Spaces Configuration (REQUIRED for video storage)
# Get from: https://cloud.digitalocean.com/spaces
DO_SPACES_ENDPOINT=https://deltahacksvideos.tor1.digitaloceanspaces.com
DO_SPACES_ACCESS_KEY=DO00UTTYXP9K7E8E4XQF
DO_SPACES_SECRET_KEY=g1VzXHgESLk1KQg5qdDe6EtU7bbhnkQyel5+AjpNiOM
DO_SPACES_BUCKET=deltahacksvideos
DO_SPACES_REGION=tor1
DO_SPACES_CDN_URL=https://deltahacksvideos.tor1.cdn.digitaloceanspaces.com

# Fish Audio API Key (REQUIRED for text-to-speech)
# Get from: https://fish.audio
FISH_AUDIO_API_KEY=your-fish-audio-api-key

# On-demand Generation Configuration (OPTIONAL - defaults shown)
SIMILARITY_THRESHOLD=0.75
TARGET_COUNT=5
MAX_GENERATE_PER_REQUEST=5
MAX_USER_CONCURRENT_JOBS=2
